{
    "compilerOptions": {
      "target": "ES6",                 // Target ECMAScript version
      "module": "commonjs",             // Module system
      "outDir": "./dist",               // Output directory for compiled JavaScript
      "rootDir": "./",                  // Root directory of the source files
      "strict": true,                   // Enable all strict type checking options
      "esModuleInterop": true,          // Enable compatibility for ES modules
      "skipLibCheck": true,             // Skip type checking of declaration files
      "forceConsistentCasingInFileNames": true // Ensure file names are case consistent
    },
    "include": ["./backend/**/*.ts", "./database/**/*.ts", "server.ts"]  // Specify which files to include
  }
  